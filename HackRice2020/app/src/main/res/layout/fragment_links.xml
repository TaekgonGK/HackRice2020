    <ImageButton
        android:id="@+id/cdcButton"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/cdclogo"
        app:layout_constraintBottom_toTopOf="@+id/whoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <ImageButton
        android:id="@+id/whoButton"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/who"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42"/>

    <ImageButton
        android:id="@+id/jhButton"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:background="@drawable/jh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whoButton"
        app:layout_constraintVertical_bias="0.25" />

